citHeader("To cite seqpac in publications use:")

citEntry(entry = "Article",
  title        = "Seqpac: A New Framework for small RNA analysis in R using Sequence-Based Counts",
  author       = personList(as.person("Signe Skog"),
                            as.person("Lovisa Örkenby"),
			    as.person("Unn Kugelberg"),
			    as.person("Kanwal Tariq"),
			    as.person("Ann-Kristin Östlund Farrants"),
			    as.person("Anita Öst"),
			    as.person("Daniel Nätt")),
  journal      = "bioRxiv",
  year         = "2021",
  volume       = "_",
  number       = "_",
  pages        = "_",
  url          = "_",

  textVersion  =
  paste("Signe Skog, Lovisa Örkenby, Unn Kugelberg, Kanwal Tariq, Ann-Kristin Östlund Farrants, Anita Öst, Daniel Nätt (2021).",
        "Seqpac: A New Framework for small RNA analysis in R using Sequence-Based Counts.",
        "bioRxiv",
        "_")
)
